<div class="row-fluid">
  <div class="col-md-6 col-md-offset-3">    
    <%= form_tag ({:controller => "main", :action => 'save_knowledge', :method => :post}) do %>

      <div class="form-group">
        <%= label_tag "Title" %>
        <%= text_field_tag "title","", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Topic" %>
        <%= select_tag "topic", options_for_select(@topics), :prompt => "Select Topic", :class => "selectpicker", :data => {:width => "100%"} %>
      </div>
      <div class="form-group">
        <%= label_tag "Tags" %>
        <%= text_field_tag "tags","", :class => "form-control tagsinput" %>
      </div>
      <div class="form-group">
        <%= label_tag "Description" %>
        <%= text_area_tag "description","", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Contents" %>
        <%= text_area_tag "contents","", :class => "form-control" %>
      </div>
      <%= submit_tag "Save Knowledge", :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>