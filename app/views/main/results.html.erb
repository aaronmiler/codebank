<h3>Search Again</h3>
<%= form_tag ({:controller => "main", :action => "results", :method => :post}) do %>
  <div class="form-group">
    <%= text_field_tag "query", "", :class => "form-control", :placeholder => "Search knowledge" %>
    <span class="input-icon fui-search"></span>
  </div>
<% end %>

<h3>Results for: <span class="text-info"><%= params['query'] %></span></h3>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Knowledge Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    
  <% @results.items.each do |r| %>
    <tr>
      <td>
        <i class="glyphicon glyphicon-file"></i>  <%= link_to r.name.gsub('-',' ').gsub('.md',''), "/view/#{r.path}"%>
      </td>
      <td>
        <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, "/edit/#{r.path}"%>
        <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, "/view/#{r.path}"%>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>