<!DOCTYPE html>
<html>
<head>
  <title>Knowledge</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/home">Tome of Knowledge</a>
        <ul class="nav navbar-nav">
          <li><a href="/search">Search</a></li>
        </ul>
      </div>
      <% if session[:credentials] %>
      <p class="pull-right navbar-text">Logged in as <strong><%= session[:credentials]['login'] %></strong></p>
        <% end %>
    </div>
  </div>

  <div class="container">

    <div class="starter-template">      
      <%= yield %>
    </div>

  </div><!-- /.container -->

  
  <%= javascript_include_tag "application" %>

  <script>
    $("select").selectpicker({style: 'btn-primary', menuStyle: 'dropdown-inverse', width: "100%"});
    $('.combobox').combobox()
    <%= yield :script %>
  </script>

</body>
</html>
